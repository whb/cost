<%- model_class = Reimbursement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:sn) %></th>
      <th><%= model_class.human_attribute_name(:reimburse_on) %></th>
      <th><%= model_class.human_attribute_name(:staff) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:organization_id) %></th>
      <th><%= model_class.human_attribute_name(:abstract) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:expense_id) %></th>
      <th><%= model_class.human_attribute_name(:invoice_no) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @reimbursements.each do |reimbursement| %>
      <tr>
        <td><%= link_to reimbursement.id, reimbursement_path(reimbursement) %></td>
        <td><%= reimbursement.sn %></td>
        <td><%= reimbursement.reimburse_on %></td>
        <td><%= reimbursement.staff %></td>
        <td><%= reimbursement.status %></td>
        <td><%= reimbursement.organization_id %></td>
        <td><%= reimbursement.abstract %></td>
        <td><%= reimbursement.amount %></td>
        <td><%= reimbursement.expense_id %></td>
        <td><%= reimbursement.invoice_no %></td>
        <td><%=l reimbursement.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_reimbursement_path(reimbursement), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      reimbursement_path(reimbursement),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_reimbursement_path,
            :class => 'btn btn-primary' %>
