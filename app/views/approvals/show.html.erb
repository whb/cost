<%- model_class = Approval -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<%= render :partial => 'expense' %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:expense_id) %>:</strong></dt>
  <dd><%= @approval.expense_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:level) %>:</strong></dt>
  <dd><%= @approval.level %></dd>
  <dt><strong><%= model_class.human_attribute_name(:approve_on) %>:</strong></dt>
  <dd><%= @approval.approve_on %></dd>
  <dt><strong><%= model_class.human_attribute_name(:agree) %>:</strong></dt>
  <dd><%= @approval.agree %></dd>
  <dt><strong><%= model_class.human_attribute_name(:explain) %>:</strong></dt>
  <dd><%= @approval.explain %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              approvals_path, :class => 'btn'  %>
</div>
