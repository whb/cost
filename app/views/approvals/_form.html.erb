<%= simple_form_for [@expense, @approval], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %> 
  <%= f.input :level, collection: level_types, disabled: true, input_html: { class: 'input-medium' } %>
  <%= f.hidden_field :level %>
  <%= f.hidden_field :manager %>
  <%= f.input :agree %>
  <%= f.input :explain, input_html: { class: 'input-xxlarge' } %>

  <div class="form-actions">
    <%= f.submit t('.approve'), :class => 'btn btn-primary' %>
     
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                approvals_path, :class => 'btn' %>
  </div>
<% end %>
