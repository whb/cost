<%- model_class = Period -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @period.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:explain) %>:</strong></dt>
  <dd><%= @period.explain %></dd>
</dl>

<table class="table">
<tr>
  <th><%= Budget.human_attribute_name(:category) %></th>
  <th><%= Budget.human_attribute_name(:amount) %></th>
  <th><%= Budget.human_attribute_name(:cost) %></th>
  <th><%= Budget.human_attribute_name(:available) %></th>
</tr>
<% for budget in @period.budgets %>
    <tr>
      <td><%= budget.category.name %></td>
      <td><%= budget.amount %></td>
      <td><%= budget.cost %></td>
      <td><%= budget.available %></td>
    </tr>
<% end %>
</table>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              periods_path, :class => 'btn'  %>
</div>
