<%= simple_form_for @period, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :year %>
  <%= f.input :explain %>
  
  <hr />  

  <%= f.simple_fields_for :budgets do |ff| %>
    <%= ff.hidden_field :category_id %>
    <%= ff.input :amount, label: ff.object.category.name %>
  <% end %>


  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                periods_path, :class => 'btn' %>
  </div>
<% end %>
