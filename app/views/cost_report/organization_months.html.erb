<div class="page-header">
  <h1><%=t '.title', :default => 'CostReport#organization_months' %></h1>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= Organization.human_attribute_name(:name) + t('.month_title', :default => ' / month') %></th>
      <% 1.upto(12).each do | month | %>
        <th><%= month %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @organization_amount_hash.each do |org,month_amount| %>
    <tr>
      <td><%= org.name %></td>
      <% 1.upto(12).each do | month | %>
        <td><%= month_amount[month] %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>