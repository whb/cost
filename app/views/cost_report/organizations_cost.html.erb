<div class="page-header">
  <h1>
    <%=t '.title', :default => 'CostReport#organizations_cost' %> 
  </h1>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%=t '.table_annotate', :default => 'Categories / Organizations' %></th>
      <th><%=t 'cost_report.summary', :default => 'Summary' %></th>
      <% @organizations.each do | o | %>
        <th><%= o.name %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |c| %>
    <tr>
      <td><%= c.name %></td>
      <td class='numeric'><%= @summary[c.id] %></td>
      <% @organizations.each do | o | %>
        <td class='numeric'><%= link_details_query(@organizations_cost_hash[[c.id, o.id]], c, o, '*') %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>