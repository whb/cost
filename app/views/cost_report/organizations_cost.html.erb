<div class="page-header">
  <h1>
    <%=t '.title', :default => 'CostReport#organizations_cost' %> 
  </h1>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= 'c / o' %></th>
      <% @organizations.each do | o | %>
        <th><%= o.name %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |c| %>
    <tr>
      <td><%= c.name %></td>
      <% @organizations.each do | o | %>
        <td><%= @organizations_cost_hash[[c.id, o.id]] %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>