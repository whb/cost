<h1>Listing reimbursements</h1>

<table>
  <tr>
    <th>Sn</th>
    <th>Reimburse on</th>
    <th>Staff</th>
    <th>Status</th>
    <th>Organization</th>
    <th>Abstract</th>
    <th>Amount</th>
    <th>Expense</th>
    <th>Invoice no</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reimbursements.each do |reimbursement| %>
  <tr>
    <td><%= reimbursement.sn %></td>
    <td><%= reimbursement.reimburse_on %></td>
    <td><%= reimbursement.staff %></td>
    <td><%= reimbursement.status %></td>
    <td><%= reimbursement.organization_id %></td>
    <td><%= reimbursement.abstract %></td>
    <td><%= reimbursement.amount %></td>
    <td><%= reimbursement.expense_id %></td>
    <td><%= reimbursement.invoice_no %></td>
    <td><%= link_to 'Show', reimbursement %></td>
    <td><%= link_to 'Edit', edit_reimbursement_path(reimbursement) %></td>
    <td><%= link_to 'Destroy', reimbursement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

