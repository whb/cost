<%- model_class = Reimbursement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<% if @period != nil %>
  <%= render 'shared/budgets_sidebar', ref_budget_list: ref_budget_for(@reimbursement, @period.budgets) %>
<% end %>

<%= render 'reimbursement' %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              session[:last_reimbursement_collection_url], :class => 'btn'  %>
  <% if @reimbursement.editable? %>            
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reimbursement_path(@reimbursement), :class => 'btn' %>
  <%= link_to t('.print', :default => t("helpers.links.print")),  "",:id => 'reimbursement_print', :class => 'btn btn-primary'  %>
  <%= link_to t('.print_left', :default => t("helpers.links.print_left")),  "",:id => 'reimbursement_print_left', :class => 'btn btn-primary'  %>

  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reimbursement_path(@reimbursement),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>   

             
</div>

<iframe id="reimbursement_pdf" name="reimbursement_pdf" width="0" height="0" frameborder="0" src="<%= reimbursement_path(@reimbursement) + '.pdf' %>"> 
</iframe>
<iframe id="reimbursement_pdf_left" name="reimbursement_pdf_left" width="0" height="0" frameborder="0" src="<%= reimbursement_path(@reimbursement) + '.pdf?left=true' %>"> 
</iframe>
